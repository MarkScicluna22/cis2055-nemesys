@model List<Nemesys.Models.Domain.Report>

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add Reports</h1>
    </div>
</div>


<div class="container py-5">

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>Tags</td>
                    <td> </td>
                </tr>
            </thead>

            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Id</td>
                        <td>@report.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach (var tag in report.Tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area=""
                               asp-controller="InvestigatorReport"
                               asp-action="Edit"
                               asp-route-id="@report.Id">
                                Edit
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Reports Found</p>
    }

</div>